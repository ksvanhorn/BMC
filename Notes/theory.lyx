\begin_inset Formula $X$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $\emptyset\in\mathcal{A}$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $X\setminus s\in\mathcal{A}$
\end_inset

 for all 
\begin_inset Formula $s\in\mathcal{A}$
\end_inset

.
\end_layout

\begin_layout Itemize
